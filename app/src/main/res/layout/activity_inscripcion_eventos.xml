<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".InscripcionEventos">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="173dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintEnd_toStartOf="@+id/imgperfil"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imgperfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/perfil_blanco"
        app:layout_constraintBottom_toTopOf="@+id/btnContactanos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Inicio"
        android:textColor="@color/ColorLetrasNegras"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnEventos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Eventos"
        android:textColor="@color/ColorLetrasNegras"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnInscripción"
        app:layout_constraintStart_toEndOf="@+id/btnInicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInscripción"
        android:layout_width="113dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="INSCRIPCIÓN"
        android:textColor="@color/ColorLetrasNegras"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnContactanos"
        app:layout_constraintStart_toEndOf="@+id/btnEventos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContactanos"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="CONTACTO"
        android:textColor="@color/ColorLetrasNegras"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInscripción"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="INSCRIBE TU SQUAT"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEventos" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nombre del capitan:"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Equipo:"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="Correo Electronico:"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="Metodo de pago:"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="INSCRIBIRME"
        android:textColor="@color/ColorLetrasNegras"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>