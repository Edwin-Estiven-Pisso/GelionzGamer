<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="173dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintEnd_toStartOf="@+id/imgperfil"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imgperfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/perfil_blanco"
        app:layout_constraintBottom_toTopOf="@+id/btnContactanos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        android:layout_marginRight="24dp" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Inicio"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnEventos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Eventos"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnInscripción"
        app:layout_constraintStart_toEndOf="@+id/btnInicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInscripción"
        android:layout_width="113dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="INSCRIPCIÓN"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnContactanos"
        app:layout_constraintStart_toEndOf="@+id/btnEventos"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnContactanos"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="CONTACTO"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInscripción"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="==BIENVENIDO=="
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEventos" />


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <VideoView
            android:id="@+id/videoIntroductorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>