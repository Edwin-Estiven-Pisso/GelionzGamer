<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2"
    tools:context=".Perfil">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imgperfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/perfil_blanco"
        app:layout_constraintBottom_toTopOf="@+id/btnContactanos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Inicio"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnEventos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="95dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Eventos"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnInscripción"
        app:layout_constraintStart_toEndOf="@+id/btnInicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInscripción"
        android:layout_width="113dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="INSCRIPCIÓN"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/btnContactanos"
        app:layout_constraintStart_toEndOf="@+id/btnEventos"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnContactanos"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="CONTACTO"
        android:textColor="@color/ColorLetrasBotones"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInscripción"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imgperfil2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/perfil_blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInicio" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="188dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:text="Edwin Estiven Pisso"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toEndOf="@+id/imgperfil2"
        app:layout_constraintTop_toBottomOf="@+id/btnInscripción" />
<!--        android:gravity="center"-->


    <TextView
        android:id="@+id/txtresultado"
        android:layout_width="188dp"
        android:layout_height="474dp"

        android:hint="Detalles del Usuario"
        android:textColorHint="#79D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnListarUsuarios"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/ColorBotones"
        android:text="Listar"
        android:textColor="@color/ColorLetrasBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgperfil2" />

</androidx.constraintlayout.widget.ConstraintLayout>